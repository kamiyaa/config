# default background for regions when nothing is displayed
background		= default	default
# frames for windows
frame			= black		default
# the title of the window
window_title		= white		default

# a directory in the menu
directory		= magenta	default
# a directory that is selected using arrows
selected_directory	= white		magenta	bold

# playlist file
playlist		= red		default
# a playlist that is selected using arrows
selected_playlist	= black		red	bold

# an ordinary file in the menu
file			= white		default
# a file that is selected using arrows
selected_file		= black		yellow	bold
# a file that is currently being played
marked_file		= yellow	default	bold
# a file (its time) that is currently being played
#                      and is also selected using arrows
marked_selected_file	= black		yellow	bold

# information shown at the right side of files
info			= magenta	default
# information shown when selected
selected_info		= magenta	black	protect
# a file (its time) that is currently being played
marked_info		= magenta	default	bold
# a file (its time) that is currently being played
marked_selected_info	= black		yellow	bold

# the status line with a message
status			= white		default
# the title of the file that is currently being played
title			= white		default
# the state: play, stop, or paused (>, [], ||)
state			= white		default
# current time of playing
current_time		= green		default
# the time left to the end of playing the current file
time_left		= red		default
# the length of the currently played file
total_time		= yellow	default
# the brackets outside the total time of a file ([10:13])
time_total_frames	= magenta	default
# the frequency and bitrate numbers
sound_parameters	= yellow	default
# "KHz" and "Kbps"
legend			= magenta	default
# disabled element ([STEREO])
disabled		= black		default
# enabled element
enabled			= yellow	default

# "empty" part of the volume bar
empty_mixer_bar		= yellow	default
# "filled" part of the volume bar
filled_mixer_bar	= black		yellow
# "empty" part of the time bar
empty_time_bar		= default	default
# "filled" part of the time bar
filled_time_bar		= black		magenta

# place wher user can type a search query or a file name
entry			= white		default
# the title of an entry
entry_title		= white		default
# error message
error			= red		default bold
# information message
message			= white		default bold
# total time of displayed items
plist_time		= white		default
